.container
  .row
    .col-md-4.col-md-offset-4
      .log-in.panel
        .panel-heading
        %h2 New Ride
        = simple_form_for(@ride) do |f|
          = f.error_notification
          .panel-body
            = f.input :from, label:false, placeholder:"From", required: true, autofocus: true, input_html: { class: 'input-lg' }
            = f.input :to, label:false, placeholder:"To", required: true, autofocus: true, input_html: { class: 'input-lg' }
            = f.input :date, required: true, autofocus: true, input_html: { class: 'input-lg' }
            = f.input :time, required: true, autofocus: true, input_html: { class: 'input-lg' }
            = f.button :submit, class: 'btn btn-lg btn-success btn-block'
            = link_to 'Back', rides_path, :class => "btn btn-lg btn-primary btn-block"


